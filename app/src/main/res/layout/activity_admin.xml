<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_box"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:paddingBottom="10dp"
            android:text="Send broadcast messages"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/broadcast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray_dark"
            android:alpha="0.7"
            app:boxBackgroundColor="@color/gray_translucent"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/gray_dark"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="4dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:hintTextColor="@color/gray_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/broadcast_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray_dark"
            android:alpha="0.7"
            app:boxBackgroundColor="@color/gray_translucent"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/gray_dark"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="4dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:hintTextColor="@color/gray_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/broadcast_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:rippleColor="@color/colorAccent_ripple"
        app:backgroundTint="@color/colorAccent"
        android:text="Send"/>




</LinearLayout>